<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/editRarity.css" />
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>

    <main>
      <div class="wrapper">
        <%- include("./partials/form-errors.ejs") %>

        <form action="/rarities/<%= prevData.id %>/edit" method="POST">
          <h2>Edit Rarity</h2>

          <div class="form-input-container">
            <div class="form-input">
              <label for="rarity_name">Rarity Name:</label>
              <input
                type="text"
                id="rarity_name"
                name="rarity_name"
                value="<%= prevData.rarity_name %>"
              />
            </div>

            <div class="form-button">
              <button type="submit">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
